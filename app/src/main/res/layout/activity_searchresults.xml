<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchresults"
    android:background="#DEF8F8"
    >

    <ImageView
        android:layout_width="120dp"
        android:layout_height="115dp"
        android:src="@drawable/circles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow"
        android:layout_margin="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:onClick="back"
        />

    <TextView
        android:id="@+id/tv_searchmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search results"
        app:layout_constraintTop_toBottomOf="@+id/backarrow"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="#157177"
        android:textStyle="bold"
        />

    <Spinner
        android:id="@+id/my_spinner"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="3dp"
        android:text="Filter"
        android:textColor="#157177"
        android:textSize="14sp"
        android:padding="5dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_searchmsg"
        android:background="@drawable/rounded_rectangle"
        />


    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_spinner"
        >

        <ImageView
            android:id="@+id/iv_box1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rectangle15"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/iv_sample1"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:src="@drawable/sample1"
            android:layout_marginTop="40dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_1"
        >

        <ImageView
            android:id="@+id/iv_box2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rectangle15"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/iv_sample2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:src="@drawable/sample2"
            android:layout_marginTop="40dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_2"
        >

        <ImageView
            android:id="@+id/iv_box3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rectangle15"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/iv_sample3"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:src="@drawable/sample3"
            android:layout_marginTop="40dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_3"
        >

        <ImageView
            android:id="@+id/iv_box4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rectangle15"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/iv_sample4"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:src="@drawable/sample4"
            android:layout_marginTop="40dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_4"
        >

        <ImageView
            android:id="@+id/iv_box5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rectangle15"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/iv_sample5"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:src="@drawable/sample5"
            android:layout_marginTop="40dp"
            />

    </LinearLayout>





    <LinearLayout
        android:id="@+id/iv_bgbox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#157177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="10"
        >

        <ImageView
            android:id="@+id/house"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/home"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:onClick="gotodashboard"
            android:layout_weight="2"
            />

        <ImageView
            android:id="@+id/search"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:src="@drawable/search_w"
            android:clickable="true"
            android:onClick="gotosearch"
            android:layout_weight="2"
            />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:src="@drawable/add"
            android:layout_weight="2"
            />

        <ImageView
            android:id="@+id/chaticon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:src="@drawable/chat"
            android:clickable="true"
            android:onClick="gotochat"
            android:layout_weight="2"
            />

        <ImageView
            android:id="@+id/human"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:src="@drawable/profile"
            android:clickable="true"
            android:onClick="gotoprofile"
            android:layout_weight="2"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>