<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchscreen"
    android:background="#DEF8F8"
    >

    <ImageView
        android:layout_width="120dp"
        android:layout_height="115dp"
        android:src="@drawable/circles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow"
        android:layout_margin="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:onClick="back"
        />

    <TextView
        android:id="@+id/tv_searchmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Find..."
        app:layout_constraintTop_toBottomOf="@+id/backarrow"
        android:layout_marginLeft="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="#157177"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/iv_searchbar"
        android:layout_width="500dp"
        android:layout_height="37dp"
        android:src="@drawable/input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_searchmsg"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:onClick="searchresultspage"
        />

    <TextView
        android:id="@+id/tv_recentsearches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent searches"
        app:layout_constraintTop_toBottomOf="@+id/iv_searchbar"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textColor="#157177"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/ll_search1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_recentsearches"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:id="@+id/words1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentor 1"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/words_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_search2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_search1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:id="@+id/words2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentor 2"
            android:textSize="16sp"
            android:textStyle="bold"            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/words_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="16sp"
            android:textStyle="bold"            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_search3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_search2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:id="@+id/words3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentor 3"
            android:textSize="16sp"
            android:textStyle="bold"            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/words_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="16sp"
            android:textStyle="bold"            />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_blurectangle"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:src="@drawable/rectangle28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse Categories"
        app:layout_constraintTop_toTopOf="@+id/iv_blurectangle"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="26sp"
        android:textColor="#157177"
        android:textStyle="bold"
        />


    <LinearLayout
        android:id="@+id/ll_category1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_search"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/img1"
            />

        <TextView
            android:id="@+id/cat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrepreneurship"
            android:textColor="#000000"
            android:padding="20dp"
            android:textSize="20sp"
            android:textStyle="bold"            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@drawable/arrow_outward"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_category2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_category1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img2"
            />

        <TextView
            android:id="@+id/cat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Growth"
            android:textColor="#000000"
            android:padding="20dp"
            android:textSize="20sp"
            android:textStyle="bold"            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@drawable/arrow_outward"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_category3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_category2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img3"
            />

        <TextView
            android:id="@+id/cat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education"
            android:textColor="#000000"
            android:padding="20dp"
            android:textSize="20sp"
            android:textStyle="bold"            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@drawable/arrow_outward"
            />
    </LinearLayout>






    <LinearLayout
        android:id="@+id/iv_bgbox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#157177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="10"
        >

        <ImageView
            android:id="@+id/house"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/home"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:onClick="gotodashboard"
            android:layout_weight="2"
            />

        <ImageView
            android:id="@+id/search"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:src="@drawable/search_w"
            android:clickable="true"
            android:onClick="gotosearch"
            android:layout_weight="2"
            />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:src="@drawable/add"
            android:layout_weight="2"
            />

        <ImageView
            android:id="@+id/chaticon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:src="@drawable/chat"
            android:clickable="true"
            android:onClick="gotochat"
            android:layout_weight="2"
            />

        <ImageView
            android:id="@+id/human"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:src="@drawable/profile"
            android:clickable="true"
            android:onClick="gotoprofile"
            android:layout_weight="2"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>