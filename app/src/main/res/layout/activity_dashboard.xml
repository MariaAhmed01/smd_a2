<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard"
    android:background="#DEF8F8"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="115dp"
                android:src="@drawable/circles"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/linlay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello,"
                    app:layout_constraintTop_toBottomOf="@+id/backarrow"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="30sp"
                    android:textColor="#157177"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/Ali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ali"
                    app:layout_constraintTop_toBottomOf="@+id/backarrow"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="end"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/smallbell" />

            </LinearLayout>

            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Ready for mentorship? Letâ€™s begin the journey!"
                android:textColor="#157177"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linlay1"
                android:layout_marginBottom="2dp"
                />

            <HorizontalScrollView
                android:id="@+id/hscroll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/msg"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:background="@drawable/buttonstyle"
                        android:text="All"
                        android:padding="7dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#157177"
                        android:background="@drawable/dialpadbutton"
                        android:text="Education"
                        android:padding="7dp"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#157177"
                        android:background="@drawable/dialpadbutton"
                        android:text="Entrepreneurship"
                        android:padding="7dp"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#157177"
                        android:background="@drawable/dialpadbutton"
                        android:text="Personal Growth"
                        android:padding="7dp"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/heading1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/hscroll1"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#157177"
                    android:text="Top Mentors for you"
                    android:padding="7dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="end"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#157177"
                    android:text="View all"
                    android:padding="7dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hscroll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/heading1"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/clickablementor"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:onClick="mentorclicked"
                    android:src="@drawable/mentor1"
                    android:layout_marginLeft="15dp"
                    android:clickable="true"
                    />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/mentor2"
                    />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/mentor3"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/heading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/hscroll2"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#157177"
                    android:text="Education Mentors"
                    android:padding="7dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="end"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#157177"
                    android:text="View all"
                    android:padding="7dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hscroll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/heading2"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/mentor3"
                    android:clickable="true"
                    android:layout_marginLeft="15dp"
                    android:onClick="mentorclicked"
                    />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/mentor4"
                    />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/mentor1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/hscroll3"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#157177"
                    android:text="Recent Mentors"
                    android:padding="7dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="end"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#157177"
                    android:text="View all"
                    android:padding="7dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hscroll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/heading2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/mentor3"
                    android:clickable="true"
                    android:onClick="mentorclicked"
                    />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/mentor4"
                    />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/mentor1"
                    />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/iv_bgbox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#157177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="10"
        >

        <ImageView
            android:id="@+id/house"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/home_w"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:onClick="gotodashboard"
            android:layout_weight="2"
            />

        <ImageView
            android:id="@+id/search"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:src="@drawable/search"
            android:clickable="true"
            android:onClick="gotosearch"
            android:layout_weight="2"
            />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:src="@drawable/add"
            android:layout_weight="2"
            />

        <ImageView
            android:id="@+id/chaticon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:src="@drawable/chat"
            android:clickable="true"
            android:onClick="gotochat"
            android:layout_weight="2"
            />

        <ImageView
            android:id="@+id/human"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:src="@drawable/profile"
            android:clickable="true"
            android:onClick="gotoprofile"
            android:layout_weight="2"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>