<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calendar"
    android:background="#DEF8F8"
    >

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/signupcontainer_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/arrow"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:onClick="back"
            />

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book a Session"
            app:layout_constraintTop_toBottomOf="@+id/backarrow"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="#157177"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_1"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:id="@+id/ll_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_2"
            android:layout_margin="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="John Cooper"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30sp"
                />

            <ImageView
                android:id="@+id/iv_rating"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@drawable/rating"
                android:layout_gravity="left"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_profilepic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profilepic"
            android:layout_gravity="right"
            />

    </LinearLayout>
    <View
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DEF8F8"
        app:layout_constraintTop_toBottomOf="@+id/ll_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        />

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_1"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/tv_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1500/Session"
            app:layout_constraintTop_toBottomOf="@+id/backarrow"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="#FFC90A"
            android:textStyle="bold"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            />

        <ImageView
            android:id="@+id/iv_msgicon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/msgicon"
            android:layout_gravity="right"
            />
        <ImageView
            android:id="@+id/iv_phoneicon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/phoneicon"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:id="@+id/iv_chaticon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cameraicon"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_calendar"
        android:layout_width="280dp"
        android:layout_height="260dp"
        android:src="@drawable/calendar_backless"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background"
        />

    <TextView
        android:id="@+id/tv_heading2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:text="Available Time Slots"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_calendar" />

    <LinearLayout
        android:id="@+id/ll_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_heading2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="10:00am"
            android:textColor="#000000"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rounded_corners"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="123dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonstyle"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="11:00am"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="12:00pm"
            android:textColor="#000000"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rounded_corners"
            />

    </LinearLayout>

    <Button
        android:id="@+id/b_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/buttonstyle"
        android:text="Book an Appointment"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>