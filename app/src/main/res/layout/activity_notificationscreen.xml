<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notificationscreen"
    android:background="#DEF8F8"
    >

    <ImageView
        android:id="@+id/circles"
        android:layout_width="120dp"
        android:layout_height="115dp"
        android:src="@drawable/circles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circles">

        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/arrow"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:onClick="back"
            />

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            app:layout_constraintTop_toBottomOf="@+id/backarrow"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="26sp"
            android:textColor="#157177"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/iv_bell"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/belll"

            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_clear_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_1"
        android:text="Clear All"
        android:textStyle="bold"
        android:textColor="#FFC90A"
        android:layout_marginEnd="20dp"
        />

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_clear_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:id="@+id/words1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have added a mentor, Alex. Thank you!"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/words_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <View
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#157177"
        app:layout_constraintTop_toBottomOf="@+id/ll_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/v_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:id="@+id/words3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your favorites list is expanding. Impressive"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/words_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <View
        android:id="@+id/v_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#157177"
        app:layout_constraintTop_toBottomOf="@+id/ll_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:id="@+id/ll_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/v_2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:id="@+id/words4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have a new message in community. ðŸ‘€"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/words_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <View
        android:id="@+id/v_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#157177"
        app:layout_constraintTop_toBottomOf="@+id/ll_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:id="@+id/ll_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/v_3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:id="@+id/words5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your favorite mentor is Online. Say Hi to him."
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/words_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <View
        android:id="@+id/v_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#157177"
        app:layout_constraintTop_toBottomOf="@+id/ll_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:id="@+id/ll_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/v_4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:id="@+id/words6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for booking a session. Good Luck."
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/words_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <View
        android:id="@+id/v_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#157177"
        app:layout_constraintTop_toBottomOf="@+id/ll_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />






</androidx.constraintlayout.widget.ConstraintLayout>