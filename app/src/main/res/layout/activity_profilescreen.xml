<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilescreen"
    android:background="#DEF8F8"
    >

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/arrow"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:onClick="back"
            />

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            app:layout_constraintTop_toBottomOf="@+id/backarrow"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="26sp"
            android:textColor="#157177"
            android:textStyle="bold"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/iv_bell"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/more_horiz"

            />

    </LinearLayout>

    <ImageView
        android:id="@+id/bg_pic"
        android:layout_width="670dp"
        android:layout_height="215dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/profilebg"
        android:text="UX Designer at Google"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_1"
        android:onClick="editbanner"
        />

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="100dp"
        android:layout_height="122dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/profilepic2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_1"
        android:onClick="editpic"/>

    <ImageView
        android:id="@+id/booked_sessions"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/bookedsessionsbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_pic"
        android:onClick="editpic"/>


    <TextView
        android:id="@+id/Favorite_mentors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite Mentors"
        app:layout_constraintTop_toBottomOf="@+id/booked_sessions"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textColor="#157177"
        android:textStyle="bold"
        />


    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Favorite_mentors"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/mentor1"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:src="@drawable/m1"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:onClick="back"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/mentor2"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:src="@drawable/m2"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:onClick="back"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/mentor3"
            android:layout_width="55dp"
            android:layout_height="140dp"
            android:src="@drawable/m3"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:onClick="back"
            />


    </LinearLayout>


    <TextView
        android:id="@+id/MyReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Reviews"
        app:layout_constraintTop_toBottomOf="@+id/ll_2"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:textSize="17sp"
        android:textColor="#157177"
        android:textStyle="bold"
        />


    <ImageView
        android:id="@+id/reviews"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:src="@drawable/reviews"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/MyReviews"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />










    <LinearLayout
        android:id="@+id/iv_bgbox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#157177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        >
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="10"
        >

        <ImageView
            android:id="@+id/house"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/home_w"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:onClick="gotodashboard"
            android:layout_weight="2"
            />

        <ImageView
            android:id="@+id/search"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:src="@drawable/search_w"
            android:clickable="true"
            android:onClick="gotosearch"
            android:layout_weight="2"
            />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:src="@drawable/add"
            android:layout_weight="2"
            />

        <ImageView
            android:id="@+id/chaticon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:src="@drawable/chat_w"
            android:clickable="true"
            android:onClick="gotochat"
            android:layout_weight="2"
            />

        <ImageView
            android:id="@+id/human"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:src="@drawable/profile_w"
            android:clickable="true"
            android:onClick="gotoprofile"
            android:layout_weight="2"
            />

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>